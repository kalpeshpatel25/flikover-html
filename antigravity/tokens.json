{
  "font": {
    "family": {
      "primary": "DM Sans, system-ui, sans-serif"
    },
    "weight": {
      "body-default": 400,
      "body-strong": 500,
      "heading-alt": 500,
      "heading-default": 600,
      "heading-strong": 700
    },
    "lineHeight": {
      "base": 1.4
    }
  },

  "color": {
    "brand": {
      "primary": "#000000",
      "secondary": "#DD2F10"
    },

    "text": {
      "heading": "#000000",
      "body-primary": "#3A3A3A",
      "body-secondary": "#000000",
      "body-tertiary": "#565656",
      "link": "#BB1C00",
      "error": "#BB1C00"
    },

    "button": {
      "primary": {
        "surface": "#000000",
        "border": "#000000",
        "text": "#FFFFFF"
      },
      "primary-outline": {
        "surface": "#FFFFFF",
        "border": "#000000",
        "text": "#000000"
      },
      "secondary": {
        "surface": "#DD2F10",
        "border": "#DD2F10",
        "text": "#FFFFFF"
      },
      "tertiary": {
        "surface": "#337ab7",
        "border": "#337ab7",
        "text": "#FFFFFF"
      },
      "tertiary-outline": {
        "surface": "#FFFFFF",
        "border": "#337ab7",
        "text": "#337ab7"
      }
    }
  },

  "layout": {
    "container": {
      "maxWidth": "1200px",
      "paddingX": "15px"
    },
    "containerFluid": {
      "width": "100%",
      "paddingX": "15px"
    },
    "page": {
      "paddingX": "15px"
    },
    "section": {
      "spacingY": "50px"
    }
  },

  "breakpoints": {
    "sm": "576px",
    "md": "768px",
    "lg": "992px",
    "xl": "1200px",
    "xxl": "1366px"
  }
}